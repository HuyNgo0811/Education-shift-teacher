extends ../layout 
block content 
  h1 Create New Class 
  form(action=`/class/create`, method='post')
    table 
      tr 
        td 
          div 
            label(for='classid') ID:
            br
            input#id(type='text' name='classID')
          div 
            label(for='name') Tên:
            br
            input#name(type='text' name='name')
          div 
            label(for='place') Cơ sở: 
            br
            select#place(name="place")
              option Select place
              option(value="Bình Thạnh") Bình Thạnh
              option(value="Phổ Quang") Phổ Quang
              option(value="Quận 7") Quận 7
              option(value="Thủ Đức") Thủ Đức 
              option(value="") CS 5
              option(value="") CS 6
              option(value="") CS 7
              option(value="") CS 8
              option(value="") CS 9
              option(value="") CS 10
          div 
            label(for='grade') Khối:
            br
            select#grades(name="grade") 
              option Select grade
              option(value="G001") 1
              option(value="G002") 2
              option(value="G003") 3
              option(value="G004") 4A
              option(value="G005") 4B
              option(value="G006") 5A
              option(value="G007") 5B
              option(value="G008") 5T
          div 
            label(for='time1') Khung giờ buổi 1:
            br
            select#time1(name="time1")
              option Select time
              option(value="Thứ 2") Thứ 2
              option(value="Thứ 3") Thứ 3
              option(value="Thứ 4") Thứ 4
              option(value="Thứ 5") Thứ 5
              option(value="Thứ 6") Thứ 6
              option(value="Thứ 7 - 1") Thứ 7 - 1
              option(value="Thứ 7 - 2") Thứ 7 - 2
              option(value="Thứ 7 - 3") Thứ 7 - 3
              option(value="Thứ 7 - 4") Thứ 7 - 4
              option(value="Chủ nhật - 1") Chủ nhật - 1
              option(value="Chủ nhật - 2") Chủ nhật - 2
              option(value="Chủ nhật - 3") Chủ nhật - 3
              option(value="Chủ nhật - 4") Chủ nhật - 4
          div 
            label(for='time2') Khung giờ buổi 2:
            br
            select#time2(name="time2")
              option select time
              option(value="Thứ 2") Thứ 2
              option(value="Thứ 3") Thứ 3
              option(value="Thứ 4") Thứ 4
              option(value="Thứ 5") Thứ 5
              option(value="Thứ 6") Thứ 6
              option(value="Thứ 7 - 1") Thứ 7 - 1
              option(value="Thứ 7 - 2") Thứ 7 - 2
              option(value="Thứ 7 - 3") Thứ 7 - 3
              option(value="Thứ 7 - 4") Thứ 7 - 4
              option(value="Chủ nhật - 1") Chủ nhật - 1
              option(value="Chủ nhật - 2") Chủ nhật - 2
              option(value="Chủ nhật - 3") Chủ nhật - 3
              option(value="Chủ nhật - 4") Chủ nhật - 4
          div 
            input#tkbID(type="hidden" name='tkbID')
          div 
            label(for='math') Số buổi Toán:
            br
            input#math(type="number" name='math')
          div 
            label(for='english') Số buổi Anh Văn:
            br
            input#english(type="number" name='english')
          div 
            label(for='literature') Số buổi Ngữ Văn:
            br
            input#literature(type="number" name='literature')
          div 
            label(for='science') Số buổi Khoa Học:
            br
            input#science(type="number" name='science')
          div 
            label(for='history') Số buổi Lịch Sử:
            br
            input#history(type="number" name='history')
          div.SubjectTungBuoi 
            - for (let i = 1; i <= 23; i++)
              input(type="hidden" id=`subject${i}` name=`subject${i}`)
            input(type="hidden" id='subject24' name='subject24' value='MTO')
          div.IDGiaoVienTungBuoi 
            - for (let i = 1; i <= 23; i++)
              input(type="hidden" id=`day${i}` name=`day${i}`)
            input(type="hidden" id='day24' name='day24' value='MTO')
          div.LichHocTKBTong 
            - for (let i = 1; i <= 157; i++)
              input.tkbbuoi(type="hidden" id=`buoi${i}` name=`buoi${i}`)
              //- input(type="hidden" id=`subbuoi${i}` name=`subbuoi${i}`)
          div.Note 
            - for (let i = 1; i < 157; i++)
              input(type="hidden" id=`note${i}` name=`note${i}`)
          
          
          //- div#teacherAuto 
          //-   input#mathteacherauto(type="hidden", name='mathteacherauto')
          //-   input#englishteacherauto(type="hidden", name='englishteacherauto')
          //-   input#literatureteacherauto(type="hidden", name='literatureteacherauto')
          //-   input#scienceteacherauto(type="hidden", name='scienceteacherauto')
          //-   input#historyteacherauto(type="hidden", name='historyteacherauto')
          
          
        td 
          div 
            h4 Bước 1:
            button#settkb Set lịch học
            span#statusSetTkb
          div 
            h4 Bước 2: 
            button#findteacher Tìm giáo viên
            span#statusFindTeacher
          div 
            h4 Bước 3 (Mỗi nút bấm 1 lần thui nhá): 
            button#addmanual Add Manual
            button#addauto Add Auto
          div#manualFields(style="display: none;")
            h3 thêm thủ công đi nè
            div 
              label(for="mathteacher") Giáo viên Toán
              br
              select#mathteacher(name="mathteacher")
            div 
              label(for="englishteacher") Giáo viên Anh Văn
              br
              select#englishteacher(name="englishteacher")
            div 
              label(for="literatureteacher") Giáo viên Ngữ Văn
              br
              select#literatureteacher(name="literatureteacher")
            div 
              label(for="scienceteacher") Giáo viên Khoa Học
              br
              select#scienceteacher(name="scienceteacher")
            div 
              label(for="historyteacher") Giáo viên Lịch Sử 
              br
              select#historyteacher(name="historyteacher")
            div 
              button#createteacher Tạo giáo viên cho từng buổi
          div#autoFields(style="display: none;")
            h3(id='status')
            div#teacherAuto 
              |Giáo viên Toán: 
              input#mathteacherauto(type="text", disabled , name='mathteacherauto')
              br
              |Giáo viên Anh Văn: 
              input#englishteacherauto(type="text", disabled , name='englishteacherauto')
              br
              |Giáo viên Ngữ Văn: 
              input#literatureteacherauto(type="text", disabled , name='literatureteacherauto')
              br
              |Giáo viên Khoa học: 
              input#scienceteacherauto(type="text", disabled , name='scienceteacherauto')
              br
              |Giáo viên Lịch Sử: 
              input#historyteacherauto(type="text", disabled , name='historyteacherauto')
            div.IDGiaoVienTKBTong 
              - for (let i = 1; i <= 157; i++) 
                input(type="hidden" id=`buoihoc${i}` name=`buoihoc${i}`)
                input(type="hidden" id=`subday${i}` name=`subday${i}`)
          div
            h4 Bước 5:  
              input(type="submit", value='Tạo lớp mới')
        td#teachereachday(style="display: none;") 
          - for(let i=1;i<24;i++)
            label(for=`teacherday${i}`) Buổi #{i}
            br
            input(type="text" disabled id=`teacherdaysetted${i}` style='width: 50%;')
            select(id=`teacherday${i}` name=`teacherday` onchange=`setteacheragain(${i})`)  
            br
          div 
            h4 Bước 4(nếu có): 
            button#autoagain Gán lại giáo viên 
            span#statusAutoAgain



  script(src='/javascripts/new-class.js')
